<div class="row">
  <div class="col-md-6">
  	<div class="panel-heading">
        <center>
		<h2> Order Details </h2></center>
	</div>
	<div class="panel-body">
              <%= image_tag @orders.service.image.url(:thumb) %>
              <%= @orders.service.title %>
          <br> <br>
		by <%= "#{@orders.user.fullname}" %>
		<hr>
		<%= "Price of unit: Rs.#{@orders.price}" %>
		<hr>
		<%= "Quantity: #{@orders.quantity}" %>
		<hr>
		<%= "Total: Rs.#{@orders.total_price} " %>
	</div>

	<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
	data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
	data-description="<%= @orders.service.title %>"
	data-amount="<%= @orders.total_price*100 %>"
	data-locale="auto"
	data-currency="INR">
	</script>
</div>
</div>

</div>
